---
import type { 
    DisplaySettingsFragment, OptiFormsResetElement } from '../../../../__generated/sdk';
import type { ContentPayload } from '../../../graphql/shared/ContentPayload';

// import LinkButton from '../../components/ButtonComponent/LinkButton.astro';

export interface Props {
    data: OptiFormsResetElement;
    contentPayload: ContentPayload;
    displaySettings: DisplaySettingsFragment[];
    Label?: string;
    Tooltip?: string;
}
const { data, displaySettings } = Astro.props as Props;
const { Label, Tooltip } = data;

// Generate a unique ID for the input
const resetId = `reset-${Label?.replace(/\s+/g, '-')}-${Math.random().toString(36).substr(2, 9)}`;
const defaultLabel = Label || "Reset Form";
---

<button 
    type="reset" 
    id={resetId}
    aria-describedby={Tooltip ? `${resetId}-tooltip` : undefined}
    title={Tooltip || `Reset the form: ${defaultLabel}`}
>
    {defaultLabel}
</button>