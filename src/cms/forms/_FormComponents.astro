---
import type { ContentPayload } from '../../graphql/shared/ContentPayload';

import OptiFormsTextboxElement from '../forms/OptiFormsTextboxElement/OptiFormsTextboxElement.astro';
import OptiFormsNumberElement from '../forms/OptiFormsNumberElement/OptiFormsNumberElement.astro';
import OptiFormsRangeElement from '../forms/OptiFormsRangeElement/OptiFormsRangeElement.astro';
import OptiFormsSelectionElement from '../forms/OptiFormsSelectionElement/OptiFormsSelectionElement.astro';
import OptiFormsTextareaElement from '../forms/OptiFormsTextareaElement/OptiFormsTextareaElement.astro';
import OptiFormsUrlElement from '../forms/OptiFormsUrlElement/OptiFormsUrlElement.astro';
import OptiFormsChoiceElement from '../forms/OptiFormsChoiceElement/OptiFormsChoiceElement.astro';
import OptiFormsSubmitElement from '../forms/OptiFormsSubmitElement/OptiFormsSubmitElement.astro';
import OptiFormsResetElement from '../forms/OptiFormsResetElement/OptiFormsResetElement.astro';

interface Props {
    contentPayload: ContentPayload;
    data: any;
}

const { contentPayload, data } = Astro.props as Props;
const { component, displaySettings, displayTemplateKey } = data;
const componentType = component._metadata.types[0];

// console.log('Component Type:', componentType);
---

{
    componentType === 'OptiFormsDITextboxElement' && (
        <OptiFormsTextboxElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}

{
    componentType === 'OptiFormsDITextareaElement' && (
        <OptiFormsTextareaElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}

{
    componentType === 'OptiFormsDINumberElement' && (
        <OptiFormsNumberElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}
{
    componentType === 'OptiFormsDIUrlElement' && (
        <OptiFormsUrlElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}

{
    componentType === 'OptiFormsDISelectionElement' && (
        <OptiFormsSelectionElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}

{
    componentType === 'OptiFormsDIRangeElement' && (
        <OptiFormsRangeElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}

{
    componentType === 'OptiFormsDIChoiceElement' && (
        <OptiFormsChoiceElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}

{
    componentType === 'OptiFormsDISubmitElement' && (
        <OptiFormsSubmitElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}
{
    componentType === 'OptiFormsDIResetElement' && (
        <OptiFormsResetElement
            contentPayload={contentPayload}
            data={component}
            displaySettings={displaySettings}
        />
    )
}