// form={FormId}

import type {
    DisplaySettingsFragment,
    OptiFormsSubmitElement,
} from '../../../../__generated/sdk';
import type { ContentPayload } from '../../../graphql/shared/ContentPayload';

import LinkButton from '../../components/ButtonComponent/LinkButton.astro';
import Content from '../../components/CardComponent/Content.astro';

export interface Props {
    data: OptiFormsSubmitElement;
    contentPayload: ContentPayload;
    displaySettings: DisplaySettingsFragment[];
    Label?: string;
    Tooltip?: string;
}
const { data, contentPayload, displaySettings } = Astro.props as Props;
const { Label, Tooltip } = data;

const defaultLabel = Label || "Submit Form";

// Generate a unique ID for the input
const submitId = `submit-${Math.random().toString(36).substr(2, 9)}`;
---

<!-- 
<LinkButton cssClasses="mt-4" tooltip={Tooltip} type="submit"
    >{Label}</LinkButton
> -->
<button class="btn btn-primary mt-4" type="submit"
    title={Tooltip || `Submit the form`}
    aria-describedby={Tooltip ? `${submitId}-tooltip` : undefined}
>
    {defaultLabel}
</button>

{Tooltip && (
    <div id={`${submitId}-tooltip`} class="sr-only">
        {Tooltip}
    </div>
)}
