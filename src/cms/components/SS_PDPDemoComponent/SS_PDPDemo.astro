---
import type {
    Ss_PdpDemoFragment,
    DisplaySettingsFragment,
} from '../../../../__generated/sdk';
import type { ContentPayload } from '../../../graphql/shared/ContentPayload';

export interface Props {
    data: Ss_PdpDemoFragment;
    displaySettings: DisplaySettingsFragment[];
    contentPayload: ContentPayload;
}
const { data } = Astro.props as Props;
---

<div class="bg-white">
    <!-- Header Section with Dark Blue Background -->
    <div class="bg-[#1e293b] text-white">
        <div class="container mx-auto px-6 py-8">
            <div class="mb-6 flex items-center justify-between">
                <h1 class="text-4xl font-bold">
                    {data.CourseTitle}
                </h1>
                <div class="flex items-center gap-8">
                    <div class="flex gap-2">
                        <button
                            class="rounded-full bg-white/10 p-1.5 hover:bg-white/20"
                            aria-label="Share on Facebook"
                        >
                            <svg
                                class="h-4 w-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                                ></path>
                            </svg>
                        </button>
                        <button
                            class="rounded-full bg-white/10 p-1.5 hover:bg-white/20"
                            aria-label="Share on Twitter"
                        >
                            <svg
                                class="h-4 w-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                                ></path>
                            </svg>
                        </button>
                        <button
                            class="rounded-full bg-white/10 p-1.5 hover:bg-white/20"
                            aria-label="Share on LinkedIn"
                        >
                            <svg
                                class="h-4 w-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                        </button>
                        <button
                            class="rounded-full bg-white/10 p-1.5 hover:bg-white/20"
                            aria-label="Copy link"
                        >
                            <svg
                                class="h-4 w-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                                ></path>
                            </svg>
                        </button>
                    </div>
                    <!-- Star Rating -->
                    <div class="flex items-center gap-2">
                        <svg
                            class="h-5 w-5 text-yellow-400"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                            ></path>
                        </svg>
                        <span class="text-lg font-semibold">
                            {data.CourseRating?.toFixed(1)}
                        </span>
                    </div>
                </div>
            </div>

            <p class="mb-6 text-lg opacity-90">
                {data.CourseAudience}
            </p>

            <div class="flex items-center gap-6">
                <!-- Course Details -->
                <div class="flex gap-6 text-sm">
                    <div class="flex items-center gap-2">
                        <svg
                            class="h-5 w-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <span>{data.CourseLength}</span>
                    </div>
                    {
                        data.IncludesAssessment && (
                            <div class="flex items-center gap-2">
                                <svg
                                    class="h-5 w-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                    />
                                </svg>
                                <span>Includes Assessment</span>
                            </div>
                        )
                    }
                    {
                        data.EarnsBadge && (
                            <div class="flex items-center gap-2">
                                <svg
                                    class="h-5 w-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                                    />
                                </svg>
                                <span>Earns a Badge</span>
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-6 py-8">
        <div class="flex items-start gap-2">
            <span class="font-semibold">From Channel:</span>
            {
                data.CourseChannels && data.CourseChannels.length > 0 && (
                    <a
                        href={data.CourseChannels[0]?.url?.default}
                        class="text-black hover:underline"
                    >
                        {data.CourseChannels[0]?.text}{' '}
                        
                    </a><span class="text-red-600">â–¶</span>
                )
            }
        </div>

        <div class="mt-8">
            {
                data.CourseDescription?.html && (
                    <div
                        class="prose prose-lg max-w-none"
                        set:html={data.CourseDescription.html}
                    />
                )
            }
        </div>

        {
            data.CourseImage?.url?.default && (
                <div class="mt-8">
                    <img
                        src={data.CourseImage.url.default}
                        alt={data.CourseTitle || 'Course image'}
                        class="max-w-[500px] rounded-lg"
                    />
                </div>
            )
        }
    </div>
</div>
